@model Category
@{
    ViewData["Title"] = "Chi tiết thể loại";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <h5 class="text-info">Thể loại @Model.Name</h5>
        <form>
            <fieldset disabled>
                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2" asp-for="Name"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                </div>
            </fieldset>

            <div class="d-flex justify-content-center">
                @if (User.IsInRole(@UserRoles.Admin))
                {
                    <a class="btn btn-sm btn-outline-primary me-2" asp-action="Edit" asp-route-id="@Model.Id">
                        Sửa thể loại
                    </a>

                    <a class="btn btn-sm btn-outline-info" asp-action="Index">
                        Danh sách thể loại
                    </a>
                }
                else
                {
                    <a class="btn btn-sm btn-outline-info" asp-controller="Movies" asp-action="Index">
                        Trang chủ
                    </a>
                }
            </div>
        </form>
    </div>
</div>
