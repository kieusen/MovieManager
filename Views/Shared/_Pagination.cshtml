@model MovieManager.Data.Helpers.Pager;

@if (Model.TotalPages > 0)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination pagination-sm justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1? "disabled" : "")">
                <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="1">
                    <i class="bi bi-chevron-bar-left"></i>
                </a>
            </li>

            <li class="page-item @(Model.CurrentPage == 1? "disabled" : "")">
                <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action"
                asp-route-page="@(Model.CurrentPage - 1)">
                    <i class="bi bi-chevron-compact-left"></i>
                </a>
            </li>

            @for (int i = @Model.StartPage; i <= @Model.EndPage; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action"
                asp-route-page="@i">@i</a>
                </li>
            }


            <li class="page-item @(Model.CurrentPage == @Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action"
                asp-route-page="@(Model.CurrentPage + 1)">
                    <i class="bi bi-chevron-compact-right"></i>
                </a>
            </li>
            <li class="page-item @(Model.CurrentPage == @Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-controller="@Model.Controller" asp-action="@Model.Action"
                asp-route-page="@Model.TotalPages">
                    <i class="bi bi-chevron-bar-right"></i>
                </a>
            </li>
        </ul>
    </nav>
}
