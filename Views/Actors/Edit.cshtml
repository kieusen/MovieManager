@model Actor
@{
    ViewData["Title"] = "Sửa thông tin diễn viên";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h5 class="text-info">Sửa thông tin diễn viên @Model.Name</h5>
        <div class="d-flex align-items-center">
            <div class="me-5 text-center">
                <img src="~/images/actors/@Model.ProfilePictureURL" alt="Ảnh diễn viên" id="ImageURLPreview"
                    class="image-circle-lg">                
            </div>
            <form asp-action="Edit" class="flex-grow-1" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Name"></label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Bio"></label>
                    <textarea class="form-control" rows="5" asp-for="Bio"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                @* Duong dan anh *@
                <div class="input-group input-group-sm mb-3">
                    <input asp-for="ProfilePictureURL" id="ProfilePictureURL" class="form-control" readonly hidden>
                    <div class="input-group-text">
                        <label class="btn btn-outline-secondary border-0 select-image">
                            <i class="bi bi-image-fill"></i> Chọn ảnh
                            <input class="form-control" asp-for="ProfilePicture" style="display: none;">
                        </label>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button class="btn btn-sm btn-outline-success me-2" type="submit">
                        Cập nhật
                    </button>

                    <a class="btn btn-sm btn-outline-info" asp-action="Index">
                        Bỏ qua
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $("#ProfilePicture").on("change", function () {
        var imageURLPreview = document.getElementById("ImageURLPreview");
        imageURLPreview.src = URL.createObjectURL(this.files[0]);
        imageURLPreview.onload = function () {
            URL.revokeObjectURL(imageURLPreview.src);
        }
    });
</script>
}