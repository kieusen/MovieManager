@model Cinema
@{
    ViewData["Title"] = "Thêm rạp";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <h5 class="text-info">Thêm rạp</h5>
        <div class="d-flex align-items-center">
            <div class="me-5 text-center">
                <img id="LogoPreview" alt="Ảnh rạp" class="image-circle-lg">    
                <br>
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <form asp-action="Create" class="flex-grow-1" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>                

                <div class="mb-3">
                    <label class="form-label" asp-for="Name"></label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @* Duong dan anh *@
                <div class="input-group input-group-sm mb-3">                 
                    <div class="input-group-text">                        
                        <label class="btn btn-outline-secondary border-0 select-image">
                            <i class="bi bi-image-fill"></i> Chọn ảnh
                            <input class="form-control" asp-for="Logo" style="display: none;"
                                onchange="document.getElementById('LogoPreview').src = window.URL.createObjectURL(this.files[0]);">
                        </label>
                    </div>
                </div>                   

                <div class="d-flex justify-content-center">
                    <button class="btn btn-sm btn-outline-success me-2" type="submit">
                        Thêm
                    </button>
                    <a class="btn btn-sm btn-outline-info" asp-action="Index">
                        Bỏ qua
                    </a>                    
                </div>
            </form>
        </div>
    </div>
</div>
