@model LoginVM

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row">
    <div class="col-md-4 offset-4">
        <div class="d-flex justify-content-center">
            <p class="h3 fw-bold mb-3">@ViewData["Title"]</p>
        </div>

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label" asp-for="EmailAddress">Email</label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Password">Mật khẩu</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span>@TempData["Error"]</span>
                </div>
            }

            <div class="d-flex justify-content-between align-items-end">
                <p class="p-0 m-0" style="color: #393f81;">Chưa có tài khoản?
                    <a asp-action="Register" style="color: #393f81;">Đăng ký</a>
                </p>

                <button class="btn btn-outline-success" type="submit">Đăng nhập</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
